/* pages/study_record/study_record.wxss */
.oneLine_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.flex_row_alignItemCenter {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex_row_alignItemCenter_spaceBetween {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.flex_column {
  display: flex;
  flex-direction: column;
}

.topBackgroundImage {
  z-index: -1;
  position: fixed;
  top: 0;
  left: 0;
  width: 175rpx;
  height: 198rpx;
}

.naviBar {
  position: fixed;
  width: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.naviBar_back {
  height: 100%;
  width: 82rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.naviBar_backImage {
  width: 58rpx;
  height: 58rpx;
}

.naviBar_title {
  color: black;
  font-size: 36rpx;
  font-weight: bold;
}

.scrollView {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.studentInfoView {
  height: 169rpx;
  width: 100%;
  margin-top: 2rpx;
  border-bottom: 0.5rpx solid #f1f1f1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.studentInfo_avatar {
  margin-left: 41rpx;
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
}

.studentInfo_name {
  height: 53rpx;
  max-width: 344rpx;
  color: #000934;
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-left: 23rpx;
}

.studentInfo_level {
  width: 42.63rpx;
  height: 28.1rpx;
  margin-left: 4rpx;
  margin-top: 4.5rpx;
}

.studentInfo_courseHour {
  height: 33rpx;
  color: #AEB3C9;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.studentInfo_courseHour_count {
  color: #4964F6;
  font-size: 24rpx;
}

.studentInfo_useListTitle {
  font-size: 24rpx;
  color: #AEB3C9;
  margin-right: 10rpx;
}

.studentInfo_enterIcon {
  width: 16rpx;
  height: 16rpx;
  margin-right: 32rpx;
}

.recordView {
  margin-top: 22rpx;
  width: 100%;
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  box-shadow: 0rpx 3rpx 20rpx rgba(0,13,77,0.13);
  -webkit-box-shadow: 0px 3px 20px rgba(0,13,77,0.13);
  position: relative;
  display: flex;
  flex-direction: column;
}

.backToTopView {
  width: 83rpx;
  height: 83rpx;
  position: fixed;
  bottom: 90rpx;
  right: 33rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 101;
}

.backTopTop_image {
  width: 83rpx;
  height: 83rpx;
}

.recordCell {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: 75rpx;
}

.recordCell_time {
  color: #AF5800;
  font-size: 32rpx;
  font-weight: bold;
  max-width: 100rpx;
  margin-left: 80rpx;
  display: flex;
  align-items: center;
}

.recordCell_teacherName {
  color: #9398AF;
  font-size: 26rpx;
  max-width: 510rpx;
  margin-right: 60rpx;
  display: flex;
  align-items: center;
}

.recordCell_content {
  margin-left: 80rpx;
  width: 640rpx;
  /* white-space: pre-wrap; */
  /* word-wrap: break-word; */
  line-height: 46rpx;
  color: #000934;
  font-size: 28rpx;
  margin-top: 23rpx;
  /* display: inline-block; */
}

.recordCell_type {
  margin-left: 2rpx;
  height: 36rpx;
  padding-left: 11rpx;
  padding-right: 11rpx;
  border-radius: 6rpx;
  background-color: #E1E5FF;
  color: #4964F6;
  font-size: 22rpx;
  /* display: inline-block; */
  align-items: center;
  text-align: center;
}

.recordCell_files {
  margin-top: 30rpx;
  margin-left: 80rpx;
  width: 620rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.recordCell_fileCell {
  width: 187rpx;
  height: 187rpx;
  position: relative;
}

.recordCell_fileCell_image {
  width: 100%;
  height: 100%;
}

.recordCell_fileCell_videoAlpha {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.54);
}

.recordFile_videoPlay {
  width: 43rpx;
  height: 50rpx;
}

.recordCell_fileCell_videoView {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recordCell_fileCell_playIcon {
  width: 49rpx;
  height: 58rpx;
}

.recordCell_lockIcon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 30rpx;
  top: 0rpx;
}

.recordCell_dash {
  width: 46rpx;
  top: 0;
  left: 0;
  position: absolute;
  height: 100%;
  border-right: 1rpx dashed #AF5800;
}


.clearHourView_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.68);
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 102;
  align-items: center;
}

.clearHourView {
  height: 816rpx;
  width: 674rpx;
  background-color: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
}

.clearHourView_titleImage {
  width: 100%;
  margin-top: 54rpx;
  height: 43.16rpx;
}

.clearHourView_titleInfo {
  height: 69rpx;
  width: 100%;
  margin-top: 41rpx;
  background-color: #FFE35A;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.clearHourView_titleInfoPoint {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-left: 27rpx;
  background-color: #AF5800;
}

.clearHourView_title {
  margin-left: 14rpx;
  color: #AF5800;
  font-size: 26rpx;
  max-width: 596rpx;
}

.clearHourView_sectionHeader {
  margin-top: 23rpx;
  height: 53rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.clearHourView_sectionHeader_title {
  color: #ABAFC4;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}

.clearCell {
  height: 71rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.clearCell_content {
  color: #000934;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clearHourView_close {
  margin-top: 64rpx;
  width: 74rpx;
  height: 74rpx;
}

.recordCell_fileCell_error {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: black;
  color: white;
  font-size: 24rpx;
}