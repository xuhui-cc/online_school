  flex-direction: row;
  align-items: center;
}

.contentView {
  width: 100%;
  height: 1448rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bgImage {
  width: 100%;
  height: 100%;
  position: absolute;
