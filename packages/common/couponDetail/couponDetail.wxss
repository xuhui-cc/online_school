.coupon_title_point {
  width: 7rpx;
  height: 7rpx;
  border-radius: 50%;
  background-color: #FF5327;
}

.coupon_title {
  color: #FF5327;
  font-size: 34rpx;
  margin-left: 16rpx;
}

.coupon_money_type {
  margin-top: 75rpx;
  color: #FF5327;
  font-size: 60rpx;
  font-weight: bolder;
  height: 84rpx;
  line-height: 84rpx;
}

.coupon_money {
  height: 190rpx;
  line-height: 190rpx;
  color: #FF5327;
  font-size: 136rpx;
  font-weight: bolder;
  margin-left: 18rpx;
}

.getButton {
  position: absolute;
  z-index: 4;
  top: 708rpx;
  left: 166rpx;
  width: 419rpx;
  height: 157rpx;
}

.coupon_notice {
  width: 610rpx;
  margin-top: 16rpx;
  line-height: 38rpx;
  color: white;
  font-size: 24rpx;

  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 10;
}

