/* packages/common/vipCardDetail/vipCardDetail.wxss */
.oneLine {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.twoLine {
  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.flex_row_alignItemsCenter {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex_row_alignItemsCenter_spaceBetween {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.baseInfo {
  margin-top: 16rpx;
  margin-left: 30rpx;
  width: 690rpx;
  height: 261rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.vipCardImage {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.vipCard_title {
  max-width: 618rpx;
  color: #0A0A0A;
  font-size: 38rpx;
  font-weight: bold;
  height: 53rpx;
  line-height: 53rpx;
  margin-top: 33rpx;
  margin-left: 38rpx;
}

.vipCard_notice {
  width: 618rpx;
  margin-top: 14rpx;
  margin-left: 38rpx;
  line-height: 34rpx;
  color: #959595;
  font-size: 24rpx;

  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.timeView {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  height: 33rpx;
}

.moneyView {
  height: 84rpx;
  position: absolute;
  bottom: 5rpx;
  right: 43rpx;
  display: flex;
  flex-direction: row;
}

.couponView {
  height: 109rpx;
  margin-top: 5rpx;
  width: 100%;
}

.couponTable {
  height: 194rpx;
  display: flex;
  flex-direction: row;
}

.couponCell {
  width: 387rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.coupon_cardImage{
  width: 100%;
  height: 100%;
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
}

.courseCell {
  height: 148rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.course_image {
  width: 256rpx;
  height: 148rpx;
  margin-left: 30rpx;
  border-radius: 8rpx;
}

.course_vipFlag {
  width: 52rpx;
  height: 34rpx;
  position: absolute;
  top: 0;
  left: 30rpx;
  z-index: 2;
}

.course_contentView {
  margin-left: 23rpx;
  width: 411rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.course_title {
  color:#272727;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 42rpx;
  width: 100%;
}

.course_infoView {
  width: 100%;
  position: absolute;
  bottom: 1rpx;
  left: 0;
}

.bottomButton {
  position: fixed;
  bottom: 28rpx;
  left: 30rpx;
  width: 690rpx;
  height: 157rpx;
  z-index: 98;
}
