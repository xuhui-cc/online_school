/* packages/teacher/teacher_couponList/teacher_couponList.wxss */
page{
  background-color: #F5F5F5;
}

.navi {
  width: 100%;
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.oneLine {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.flex_row_alignItemsCenter {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.naviContent {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.backItem {
  margin-left: 5rpx;
  width: 72rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navi_title {
  color: #000;
  font-size: 36rpx;
  font-weight: bold;
}

.contentView {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.couponCell {
  margin-left: 30rpx;
  width: 690rpx;
  min-height: 443rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  border-radius: 15rpx;
  background-color: white;
  z-index: -2;
}

.coupon_bgImage {
  width: 100%;
  height: 202rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.coupon_title {
  color: white;
  font-size: 48rpx;
  font-weight: bolder;
  height: 67rpx;
  line-height: 67rpx;
  margin-top: 30rpx;
  margin-left: 39rpx;
  max-width: 480rpx;
}

.coupon_id {
  color: white;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
  margin-left: 39rpx;
  max-width: 250rpx;
}

.coupon_notice {
  color: #959595;
  font-size: 24rpx;
  line-height: 38rpx;
  margin-top: 10rpx;
  margin-left: 33rpx;
  width: 611rpx;

  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.coupon_notice_open {
  color: #959595;
  font-size: 24rpx;
  line-height: 38rpx;
  margin-top: 10rpx;
  margin-left: 33rpx;
  width: 611rpx;
}

.coupon_openButton {
  height:50rpx; 
  width:100%;
  position: absolute;
  bottom: 10rpx;
  left: 0;
}

.coupon_moneyView {
  position: absolute;
  top: 86rpx;
  right: 28rpx;
  height: 115rpx;
  display: flex;
  flex-direction: row;
}

.coupon_shareButton {
  width: 165rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: linear-gradient(to right, #FFCE75 , #FF9F21);

  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 26rpx;

  position: absolute;
  top: 229rpx;
  right: 32rpx;
}

.shareSureView {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.56);
}

.alertView {
  width: 580rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 15rpx;
  position: relative;
}

.alert_title {
  color: #272727;
  font-size: 34rpx;
  margin-top: 60rpx;
}

.alert_bottomView {
  position: absolute;
  height: 80rpx;
  width: 100%;
  border-top: 0.5rpx solid #eee;
  bottom: 0;
  left: 0;
}

.cancelView {
  width: 290rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: gray;
  font-size: 30rpx;
  border-right: 0.5rpx solid #eee;
}

.sureView {
  width: 290rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1BB059;
  font-size: 30rpx;
  border-right: 0.5rpx solid #eee;
}