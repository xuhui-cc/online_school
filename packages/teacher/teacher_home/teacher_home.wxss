/* packages/teacher/teacher_home/teacher_home.wxss */
page{
  background-color: #F5F5F5;
}
.flex_row_alignItemCenter {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex_row_alignItemsCenter_spaceBetween {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.navi {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: white;
  z-index: 99;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.navi_content {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.navi_title {
  color: #000000;
  font-size: 36rpx;
  font-weight: bold;
  max-width: 450rpx;
}


.infoView {
  height: 287rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  position: relative;
}

.avatar_image {
  margin-top: 29rpx;
  width: 141rpx;
  height: 141rpx;
  border-radius: 50%;
}

.teacher_name {
  margin-top: 19rpx;
  max-width: 690rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #272727;
  font-size: 34rpx;
  font-weight: bold;
}

.role_student {
  position: absolute;
  top: 69rpx;
  right: 0;
  width: 192rpx;
  height: 61rpx;
  border-radius: 30.5rpx 0 0 30.5rpx;
  background-color: #DFFFF6;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.itemView {
  width: 100%;
  margin-top: 21rpx;
  display: flex;
  flex-direction: column;
}

.itemCell {
  width: 100%;
  height: 105rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}