/* packages/teacher/record_evaluate/record_evaluate.wxss */
.oneLine_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.flex_row_alignItemCenter {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.naviBar {
  position: fixed;
  width: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.naviBar_back {
  height: 100%;
  width: 82rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.naviBar_backImage {
  width: 58rpx;
  height: 58rpx;
}

.naviBar_title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.headerBgView {
  height: 474rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.headerBg_image {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.header_studentName {
  color: #ffe35a;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 207rpx;
  margin-left: 30rpx;
  max-width: 690rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
}

.header_time {
  color: #ffe35a;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 19rpx;
  margin-left: 30rpx;
  max-width: 690rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
}

.recordContentView {
  margin-top: 21rpx;
  /* height: 753rpx; */
  padding-bottom: 150rpx;
  margin-left: 30rpx;
  width: 690rpx;
  border-radius: 17rpx;
  background-color: white;
  box-shadow:0rpx 3rpx 41rpx rgba(0,13,77,0.07);
  -webkit-box-shadow:0px 3px 41px rgba(0,13,77,0.07);
  display: flex;
  flex-direction: column;
  /* z-index: 1; */
}

.bottomButton {
  position: fixed;
  height: 90rpx;
  left: 30rpx;
  width: 690rpx;
  background-color: #4964f6;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  z-index: 100;
}

.scoreInput {
  width: 234rpx;
  height: 68rpx;
  margin-left: 39rpx;
  background-color: #F9F9F9;
  border-radius: 9rpx;
  color: #000934;
  font-size: 30rpx;
  text-align: center;
}

.textContentView {
  margin-top: 27rpx;
  width: 100%;
  height: 378rpx;
  display: flex;
  flex-direction: row;
}

.contentTextarea {
  height: 100%;
  margin-left: 17rpx;
  width: 572rpx;
  color: #272727;
  font-size: 30rpx;
  line-height: 42rpx;
}

.contentTextarea_placehoulder {
  height: 42rpx;
  line-height: 42rpx;
  color: rgba(0, 9, 52, 0.22);
  font-size: 30rpx;
}