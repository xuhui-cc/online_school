/* component/calendar/calendar.wxss */
/**index.wxss**/
.month_view {
  margin-top: 0rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 90rpx;
  position: relative;
}

.year {
  margin-left: 29rpx;
  max-width: 150rpx;
  font-size: 30rpx;
  color: #000934;
  font-weight: bold;
}

.month {
  margin-left: 7rpx;
  max-width: 90rpx;
  font-size: 30rpx;
  color: #000934;
  font-weight: bold;
}

.last_month_arrow {
  position: absolute;
  height: 78.5rpx;
  right: 80rpx;
  /* top: 10; */
  width: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  justify-content: flex-start;
}

.last_month_arrow:active {
  opacity: 0.6;
}

.next_month_arrow {
  position: absolute;
  height: 78.5rpx;
  right: 0rpx;
  /* top: 10; */
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 30rpx;
}

.next_month_arrow:active {
  opacity: 0.6;
}

.month_arrow_image {
  width: 16rpx;
  height: 16rpx;
}

.monthView_bottomLine {
  position: absolute;
  top: 78rpx;
  left: 0;
  right: 0;
  height: 0.5rpx;
  background-color: #f1f1f1;
  z-index: 2;
}

.weekDay_title {
  background-color: white;
  height: 38rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.weekDay {
  color: #ABAFC4;
  font-size: 22rpx;
  width: 107rpx;
}

.dayListView {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 750rpx;
  /* height: 93rpx; */
  background-color: white;
}

.dayItemView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 107rpx;
  height: 93rpx;
  position: relative;
}

.day_text {
  color: #000934;
  font-size: 32rpx;
  z-index: 2;
}

.day_text_cannotClick {
  color: #ABAFC4;
  font-size: 32rpx;
  z-index: 2;
}

.day_text_selected {
  color: #ff9853;
  font-size: 32rpx;
  z-index: 2;
}

.today {
  width: 58rpx;
  height: 58rpx;
  z-index: 2;
  border-radius: 50%;
  background-color: rgba(73, 100, 246, 0.19);
  color: #4964F6;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.today_selected {
  width: 58rpx;
  height: 58rpx;
  z-index: 2;
  border-radius: 50%;
  background-color: #4964F6;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dot {
  border-radius: 50%;
  width: 7rpx;
  height: 7rpx;
  background-color: #00E2A2;
  position: absolute;
  bottom: 5rpx;
  z-index: 2;
}

.day_bgColor {
  background-color: #f2faff;
  position: absolute;
  align-items: center;
  height: 48rpx;
  left: 0;
  right: 0;
}

.showCalenderView {
  background-color: white;
  height: 51rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.calenderShow_arrow {
  margin-right: 42rpx;
  width: 16.76rpx;
  height: 24.07rpx;
}

.backTodayView {
  background-color: #FFE35A;
  border-radius: 22.5rpx;
  height: 45rpx;
  width: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #AF5800;
  font-size: 24rpx;
  margin-right: 29rpx;
}