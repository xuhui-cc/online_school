.adWindow {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.centerView {
  width: 710rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.adImage {
  width: 100%;
}

.adCloseButton {
  margin-top: 15rpx;
  width: 74rpx;
  height: 74rpx;
}