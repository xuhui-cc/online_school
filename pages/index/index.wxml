<view class="container">

 <!-- 标题栏 -->
  <view class="nabigation_bar">
    <picker bindchange="grade_picker"  value="{{grade_index}}" range="{{grade}}" range-key="{{'title'}}">
      <view class="grade_content">{{grade[grade_index].title}}</view>
    </picker>
    <picker bindchange="grade_picker"  value="{{grade_index}}" range="{{grade}}" range-key="{{'title'}}">
      <image class="grade_img" src="../../images/xsj.png"></image>
    </picker>
    <view class="head">领军网校</view>
  </view>
  <!-- 标题栏结束 -->

  <view wx:if="{{test_list != ''}}">
    <view class="test_margin">
      <view  wx:for="{{test_list.lists}}" wx:key="index">
        <view class="test_layout">
          <view class="title">{{item.title}}</view>
          <view class="intro">{{item.remark}}</view>
          <view class="btn" wx:if="{{item.mid != 0}}" bindtap="to_cp_report" data-xb="{{index}}" style="background:#4D97F6;">
            
            <view class="test_word" style="margin-left: 28rpx;">查看报告</view>
            <image class="btn_img" src="../../images/next_bsj.png" style="margin-left: 5rpx;"></image>
          </view>
          <view class="btn" wx:if="{{item.mid == 0}}" bindtap="to_cp_test" data-xb="{{index}}">
            <image class="btn_img" src="../../images/cp_btn.png"></image>
            <view class="test_word">开始测评</view>
          </view>
        </view>
      </view>
    
    
    </view>
  </view>

  <view wx:if="{{test_list == ''}}">
    <image class="null_img" src="../../images/cp_null.png"></image>
    <view class="null_tip">暂无测评</view>
  </view>














</view>