<view class="container">
  <!-- 标题栏 -->
  <view class="nabigation_bar">
      <view class="grade_content" bindtap="grade_select">{{grade[grade_index].title}}</view>
      <image class="grade_img" src="../../images/xsj.png" bindtap="grade_select"></image>
    <view class="head">课程</view>
  </view>
  <!-- 标题栏结束 -->

  <!-- 年级选择 -->
  <view class="mask" wx:if="{{grade_select}}"></view>

  <view class="select" wx:if="{{grade_select}}">
    <view class="flex">
      <view class="title">年级选择</view>
      <image class="del_img" src="../../images/del.png" bindtap="del"></image>
    </view>
    <view class="heng"></view>
    <scroll-view class="selec_layout"  scroll-y="true">
      <view wx:for="{{grade}}" wx:key="index">
        <view class="sel_item" data-xb="{{index}}" bindtap="subject_sel">{{item.title}}</view>
        <view class="heng"></view>
      </view>
    </scroll-view>
    <!-- <view class="yes">确定</view> -->
  </view>
  
    
  <!-- </picker> -->



  <scroll-view  scroll-x="true" class="tab-h" >
    <view wx:for="{{subject}}" wx:key="index" class="tab-item {{current_subject==index?'active':''}}" data-current="{{index}}"  bindtap="swichNav_subject">{{item.title}}</view> 
  </scroll-view> 



  <view class="flex" wx:if="{{special && special != ''}}" style="margin-bottom:20rpx;">
    <view class="zt">专题：</view>
    <scroll-view  scroll-x="true" class="tab-h1" >
      <view wx:for="{{special}}" wx:key="index" class="tab-item1 {{current_special==index?'active':''}}"  bindtap="swichNav_special" data-current="{{index}}">{{item.title}}</view> 
    </scroll-view> 
  </view>

  <view wx:if="{{current_subject == 0}}">
    <swiper class="swiper_container" autoplay="true"  interval="2500" circular="true" indicator-dots="true" indicator-color="rgba(255,255,255,1)" indicator-active-color="rgba(12,205,163,1)">
      <block wx:for="{{ad}}" wx:key='ad_index' >
         <swiper-item>
          <image  class="ad_img" src="../../images/ad.png" mode="widthFix" ></image>
         </swiper-item>
      </block>
    </swiper>
  </view>

  <view style="margin-bottom:100rpx;" wx:if="{{current_subject > 0}}">
    <view wx:for="{{course.lists}}" wx:key="index">

      <view class="course_layout" bindtap="to_course_detail" data-xb="{{index}}">
        <image class="laber" wx:if="{{item.is_buy == 1 && login}}" src="../../images/isbuy.png"></image>
        <image class="laber" wx:if="{{item.is_buy == 0 && item.is_group == 1}}" src="../../images/group_laber.png"></image>
        <image class="laber" wx:if="{{!login && item.is_group == 1}}" src="../../images/group_laber.png"></image>
        <view class="flex">
          <image class="course_fm" src="{{item.face}}"></image>
          <view style="margin-left:23rpx;">
            <view class="course_title">{{item.title}}</view>
            <view class="flex">
              <view class="course_text">{{item.order_num}}人购买</view>
              <view class="margin_shu"></view>
              <view class="course_num">{{item.class_hour}}课时</view>
            </view>
            <view class="flex" wx:if="{{item.is_group == 1}}">
              <image class="group_laber1" src="../../images/group_laber1.png"></image>
              <view class="course_price"><text style="font-size:26rpx;font-weight:400;"> ¥ </text>{{item.pt_price}}</view>
              <view class="old_price">¥{{item.price}}</view>
            </view>
            <view wx:if="{{item.is_group == 0}}" class="course_price" style="color:rgba(3,182,131,1);"><text style="font-size:26rpx;font-weight:400;"> ¥ </text>{{item.price}}</view>

          </view>
        </view>
      </view>
