
<view class="container">

  <image class="back" src="../../images/w_back2.png" bindtap="back"></image>


  <image class="bg3" src="../../images/bg3.png"></image>

  <view class="flex" style="margin-top:176rpx;margin-left: 50rpx;">
    <view class="ava">
      <open-data  type="userAvatarUrl"></open-data>
    </view>
    
     
    <view class="flex" wx:if="{{vip_list[0].is_buy == 0}}">
      <open-data type="userNickName" class="nick"></open-data>
      <view class="btn" bindtap="vip_buy">立即开通</view>
    </view>
    <view style="margin-top: 15rpx;" wx:if="{{vip_list[0].is_buy >0}}">
      <open-data type="userNickName" class="nick"></open-data>
      <!-- <view class="nick" >张东升的假发</view> -->
      <view class="flex">
        <image class="badge_img" src="../../images/vip_badge2.png"></image>
        <view wx:if="{{vip_list[0].valid_days == 0}}" class="vip_time">永久</view>
        <view wx:else="" class="vip_time">2020-09-30到期</view>
      </view>
    </view>
  </view>

  <!-- 卡片滚动 -->
