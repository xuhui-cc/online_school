<view class="container">
  <view class="layout">
        <!-- <image class="clock" src="../../images/clock.png"></image>
        <view class="time">45:59</view> -->
        <view class="current">7</view>
        <view class="sum">/10</view>
        <image class="card_img" src="../../images/card.png"></image>
        <view class="dtk" bindtap="dtk">答题卡</view>
      </view>
      <view class="dtk_layout" wx:if="{{dtk}}">

        <view class="ques_title">一、单选题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 1}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">二、多选题</view>
        
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 2}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">三、判断题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 3}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">四、简答题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 4}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">五、组合题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 5}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="submit">交卷</view>

      </view>
  <swiper bindanimationfinish ="swiperchange" current="{{currentTab}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}">
  
    <swiper-item >
    <!-- wx:for="{{cs}}" wx:key="index" -->
      
      <scroll-view scroll-y="true">
        <view>{{cs[currentTab]}}</view>
      </scroll-view>
      
    </swiper-item>
  </swiper>






 














