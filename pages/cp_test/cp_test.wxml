<view class="container">

  <!-- 试卷说明 -->
  <view class="test_explain" wx:if="{{!start_ans}}">
    <view class="title">{{test_explain.title}}</view>
    <view class="title" style="margin-top: 20rpx;">试卷说明</view>
    <view class="explain">本题分数 <text style="color:#03B683">{{test_explain.all_sum}}分</text> ，答题时长 <text style="color:#03B683;">{{test_explain.timeline}}分钟</text>。</view>

    <view wx:for="{{test_explain.option}}" wx:key="index">
      <view class="flex">
        <view wx:if="{{item.type == 1}}" class="explain_title">一、单选题</view>
        <view wx:if="{{item.type == 2}}" class="explain_title">二、多选题</view>
        <view wx:if="{{item.type == 3}}" class="explain_title">三、判断题</view>
        <view wx:if="{{item.type == 4}}" class="explain_title">四、填空题</view>
        <view wx:if="{{item.type == 5}}" class="explain_title">五、简答题</view>
        <view class="ques_num">{{item.min_count}}道</view>
        <view class="score_num">{{item.min_sum}}分</view>
      </view>
    
    
    </view>

  <view class="start_btn" bindtap="start_ans">开始答题</view>
  
  
  
  
  
  </view>


  <!-- 试卷菜单栏 -->
  <view class="layout">
        <!-- <image class="clock" src="../../images/clock.png"></image>
        <view class="time">45:59</view> -->
        <view class="current">{{currentTab + 1}}</view>
        <view class="sum">/{{ques_info.num}}</view>
        <image class="card_img" src="../../images/card.png"></image>
        <view class="dtk" bindtap="dtk">答题卡</view>
      </view>



      <!-- 答题卡 -->
      <view class="dtk_layout" wx:if="{{dtk}}">
        <view class="ques_title">一、单选题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 1}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">二、多选题</view>
        
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 2}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">三、判断题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 3}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">四、简答题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 4}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="ques_title">五、组合题</view>
        <view class="warp">
          <view class="for" wx:for="{{id_list}}" wx:key="index">
            <view wx:if="{{item.type == 5}}" class="r-a-w" style="background:rgba(3,182,131,1);">{{index + 1}}</view>
            <!-- <view class="r-a-w" style="background:rgba(235,235,235,1);">index +1</view> -->
          </view>
        </view>

        <view class="submit">交卷</view>

      </view>
