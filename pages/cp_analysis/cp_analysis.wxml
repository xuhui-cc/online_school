<view class="container">

 


  <!-- 试卷菜单栏 -->
  <view class="layout">
    <view class="current">{{currentTab + 1}}</view>
    <view class="sum">/{{ques_info.num}}</view>
    <image class="card_img" src="../../images/card.png"></image>
    <view class="dtk" bindtap="dtk">答题卡</view>
  </view>



  <!-- 答题卡 -->
  <!-- wx:if="{{dtk}}" -->
  <view class="dtk_layout" wx:if="{{dtk}}">
    <view class="ques_title" wx:if="{{ques_type == 1}}">一、单选题</view>
    <view class="warp">
      <view class="for" wx:for="{{id_list}}" wx:key="index">
        <view wx:if="{{item.type == 1}}" class="r-a-w" style="{{item.ans<0?'background:rgba(235,235,235,1);':'background:rgba(3,182,131,1);'}}">{{index + 1}}</view>
      </view>
    </view>

    <view class="ques_title" wx:if="{{ques_type == 2}}">二、多选题</view>
    <view class="warp">
      <view class="for" wx:for="{{id_list}}" wx:key="index">
        <view wx:if="{{item.type == 2}}" class="r-a-w" style="{{item.ans<0?'background:rgba(235,235,235,1);':'background:rgba(3,182,131,1);'}}">{{index + 1}}</view>
      </view>
    </view>

    <view class="ques_title" wx:if="{{ques_type == 3}}">三、判断题</view>
    <view class="warp">
      <view class="for" wx:for="{{id_list}}" wx:key="index">
        <view wx:if="{{item.type == 3}}" class="r-a-w" style="{{item.ans<0?'background:rgba(235,235,235,1);':'background:rgba(3,182,131,1);'}}">{{index + 1}}</view>
      </view>
    </view>

    <view class="ques_title" wx:if="{{ques_type == 4}}">四、简答题</view>
    <view class="warp">
      <view class="for" wx:for="{{id_list}}" wx:key="index">
        <view wx:if="{{item.type == 4}}" class="r-a-w" style="{{item.ans<0?'background:rgba(235,235,235,1);':'background:rgba(3,182,131,1);'}}">{{index + 1}}</view>
      </view>
    </view>

    <view class="ques_title" wx:if="{{ques_type == 5}}">五、组合题</view>
    <view class="warp">
      <view class="for" wx:for="{{id_list}}" wx:key="index">
        <view wx:if="{{item.type == 5}}" class="r-a-w" style="{{item.ans<0?'background:rgba(235,235,235,1);':'background:rgba(3,182,131,1);'}}">{{index + 1}}</view>
      </view>
    </view>

    

  </view>

  <!-- 试卷详情 -->

  <!-- <swiper bindanimationfinish ="swiperchange"  data-current="{{currentTab}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}"> -->

   <view class="body" bindtouchstart='touchStart' bindtouchmove='touchMove' bindtouchend='touchEnd'  style='{{moveLeft}}'>

    <!-- bindanimationfinish ="swiperchange"  -->
  
    <!-- <swiper-item > -->
    <!-- wx:for="{{cs}}" wx:key="index" -->
      
      <scroll-view scroll-y="true">
        <!-- <view>{{question.title}}</view> -->
        <view class="ques_content">
          <rich-text nodes="{{analysis.title}}"></rich-text>
        </view>
        <view wx:if="{{analysis.mark == 0}}">
          <view class="select"  wx:if="{{analysis.a != null}}" style="{{analysis.answer == 0?'background:rgba(2,220,159,0.1);':''}}">
          <view class="{{analysis.answer == 0?'sel_A':'unsel_A'}}" >A</view>
            <rich-text nodes="{{analysis.a}}" class="cs"></rich-text>
        </view>
        <view class="select"  wx:if="{{analysis.b != null}}" style="{{analysis.answer == 1?'background:rgba(2,220,159,0.1);':''}}">
          <view class="{{analysis.answer == 1?'sel_A':'unsel_A'}}">B</view>
            <rich-text nodes="{{analysis.b}}" class="cs"></rich-text>
        </view>
        <view class="select"  wx:if="{{analysis.c != null}}" style="{{analysis.answer == 2?'background:rgba(2,220,159,0.1);':''}}">
          <view class="{{analysis.answer == 2?'sel_A':'unsel_A'}}">C</view>
            <rich-text nodes="{{analysis.c}}" class="cs"></rich-text> 
        </view>
        <view class="select"  wx:if="{{analysis.d != null}}" style="{{analysis.answer == 3?'background:rgba(2,220,159,0.1);':''}}">
          <view class="{{analysis.answer == 3?'sel_A':'unsel_A'}}">D</view>   
            <rich-text nodes="{{analysis.d}}" class="cs"></rich-text>
        </view>
        
        
        
        
        
        </view>
        <view class="select" style="{{question.myans == 0?'background:rgba(248,249,252,1);':''}}" wx:if="{{question.a != null}}" >
          <view class="{{question.myans == 0?'sel_A':'unsel_A'}}" >A</view>
            <rich-text nodes="{{analysis.a}}" class="cs"></rich-text>
        </view>
        <view class="select" style="{{question.myans == 1?'background:rgba(248,249,252,1);':''}}" wx:if="{{question.b != null}}" >
          <view class="{{question.myans == 1?'sel_A':'unsel_A'}}">B</view>
            <rich-text nodes="{{analysis.b}}" class="cs"></rich-text>
        </view>
        <view class="select" style="{{question.myans == 2?'background:rgba(248,249,252,1);':''}}" wx:if="{{question.c != null}}" >
          <view class="{{question.myans == 2?'sel_A':'unsel_A'}}">C</view>
            <rich-text nodes="{{analysis.c}}" class="cs"></rich-text> 
        </view>
        <view class="select" style="{{question.myans == 3?'background:rgba(248,249,252,1);':''}}" wx:if="{{question.d != null}}" >
          <view class="{{question.myans == 3?'sel_A':'unsel_A'}}">D</view>   
            <rich-text nodes="{{analysis.d}}" class="cs"></rich-text>
        </view>
        <view class="select" wx:if="{{question.e != null}}">
          <view class="unsel_A">E</view>
          <rich-text nodes="{{question.e}}"></rich-text>
          <!-- <view class="sel_content">{{question.e}}</view> -->
        </view>
        <view class="select" wx:if="{{question.f != null}}">
          <view class="unsel_A">F</view>
          <rich-text nodes="{{question.f}}"></rich-text>
          <!-- <view class="sel_content">{{question.f}}</view> -->
        </view>
        <view class="select" wx:if="{{question.g != null}}">
          <view class="unsel_A">G</view>
          <rich-text nodes="{{question.g}}"></rich-text>
          <!-- <view class="sel_content">{{question.g}}</view> -->
        </view>
        <view class="select" wx:if="{{question.h != null}}">
          <view class="unsel_A">H</view>
          <rich-text nodes="{{question.h}}"></rich-text>
          <!-- <view class="sel_content">{{question.h}}</view> -->
        </view>
        <!-- <view wx:if="{{question.a != ''}}">A.{{question.a}}</view> -->
        <!-- <view wx:if="{{question.b != ''}}">B.{{question.b}}</view>
        <view wx:if="{{question.c != ''}}">C.{{question.c}}</view>
        <view wx:if="{{question.d != ''}}">D.{{question.d}}</view>
        <view wx:if="{{question.e != ''}}">E.{{question.e}}</view>
        <view wx:if="{{question.f != ''}}">F.{{question.f}}</view>
        <view wx:if="{{question.g != ''}}">G.{{question.g}}</view>
        <view wx:if="{{question.h != ''}}">H.{{question.h}}</view> -->

        <view class="flex">
          <view class="shu"></view>
          <view class="right">正确答案：</view>
          <view wx:if="{{analysis.answer == 0}}" class="right_ans">A</view>
          <view wx:if="{{analysis.answer == 1}}" class="right_ans">B</view>
          <view wx:if="{{analysis.answer == 2}}" class="right_ans">C</view>
          <view wx:if="{{analysis.answer == 3}}" class="right_ans">D</view>

          <view wx:if="{{analysis.mark == 0}}" class="your">您的答案: 未做</view>
          <view wx:if="{{analysis.mark.submit == 0}}" class="your">您的答案: A</view>
          <view wx:if="{{analysis.mark.submit == 1}}" class="your">您的答案: B</view>
          <view wx:if="{{analysis.mark.submit == 2}}" class="your">您的答案: C</view>
          <view wx:if="{{analysis.mark.submit == 3}}" class="your">您的答案: D</view>
        </view>

        
      </scroll-view>
      
    <!-- </swiper-item> -->
  </view>
  <!-- </swiper> -->


 






 














