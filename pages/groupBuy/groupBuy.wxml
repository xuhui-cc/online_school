<view class="container">
  <view class="intro_layout">
    <view class="flex">
      <view class="group_num">{{course_info.persons}}人团</view>
      <view class="course_name">{{course_info.title}}</view>  
    </view>
    <view class="course_intro1">{{course_info.intro}}</view>
    <!-- <view>{{clock}}</view> -->
    <view class="flex">
      <view class="for" wx:for="{{course_info.teacher}}" wx:key="index">
        <view class="flex" style="width:284rpx;margin-left:30rpx;margin-top:53rpx;margin-bottom:30rpx;">
          <view class="tea_layout">
            <image class="tea_avatar" src="{{item.avatar}}"></image>
            <view class="tea_name">{{item.nick}}</view>
          </view> 
        </view>
      </view>  
      <view>
        <image class="group_laber" src="../../images/group_laber1.png"></image>
        <view class="group_price">¥{{course_info.pt_price}}</view>
        <view class="old_price">¥{{course_info.price}}</view>
      </view>
    </view>
  </view>
  <view class="margin_gray" wx:if="{{course_info.group != '' && course_info.pay_status <=2 && course_info.pay_status <= 4}}"></view>

  <view class="group_message" wx:if="{{course_info.group != '' && course_info.pay_status <=2 && course_info.pay_status <= 4}} ">
    <view class="flex">
      <view class="group_tip">立即参加Ta人的已开团，可快速成团</view>
      <view class="group_rule">查看拼团规则</view>
      <image class="next" src="../../images/next.png"></image>
    </view>
    <view  wx:for="{{course_info.group}}" wx:key="group_index" style="margin-bottom:40rpx;">
      <view class="flex" style="margin-top:56rpx;">
        <view class="flex" wx:if="{{item.nums == 2}}">
          <image class="ava1" src="{{item.member[0].avatar}}"></image>
          <image class="ava1" style="margin-left: 80rpx;z-index: 9;" src="../../images/group_ava.png"></image>
        </view>
        <view class="flex" wx:if="{{item.nums == 3}}">
          <image class="ava1" src="{{item.member[0].avatar}}"></image>
          <image class="ava1" style="margin-left: 55rpx;z-index: 9;" wx:if="{{item.member[1].avatar != ''}}" src="{{item.member[1].avatar}}"></image>
          <image class="ava1" style="margin-left: 55rpx;z-index: 9;" wx:else="" src="../../images/group_ava.png"></image>
          <image class="ava1" style="margin-left: 85rpx;z-index: 8;" src="../../images/group_ava.png"></image>
        </view>
        <view class="flex" wx:if="{{item.nums > 3}}">
          <image class="ava1" src="{{item.member[0].avatar}}" ></image>
          <image class="ava1" style="margin-left: 45rpx;z-index: 9;" wx:if="{{item.member[1].avatar != ''}}" src="{{item.member[1].avatar}}"></image>
          <image class="ava1" style="margin-left: 45rpx;z-index: 9;" wx:else="" src="../../images/group_ava.png"></image>
          <image class="ava1" style="margin-left: 57rpx;z-index: 8;" wx:if="{{item.member[2].avatar != ''}}" src="{{item.member[2].avatar}}"></image>
          <image class="ava1" style="margin-left: 57rpx;z-index: 8;" wx:else="" src="../../images/group_ava.png"></image>
          <image class="ava1" style="margin-left: 75rpx;z-index: 7;" src="../../images/group_ava.png"></image>
        </view>
        <view style="width:285rpx;margin-left: 180rpx;">
          <view class="flex">
            <view class="sponsor">{{item.nick}} </view>
            <view class="group_num1">发起的团</view>
          </view>
          <view class="flex">
            <view class="lack_num">还差<text style="color:rgba(255,75,32,1);">{{item.nums - item.has_nums}}人 </text></view>
            <view class="lack_num" style="margin-left: 10rpx;"> 距结束<text style="color:rgba(255,75,32,1);">00:06:23</text></view>
          </view>
        </view>
        <view class="join_group" wx:if="{{course_info.has_join <= 0}}" bindtap="to_group_detail" data-tid="{{item.id}}">立即参加</view>
        <view class="join_group" wx:if="{{course_info.has_join > 0}}" bindtap="to_group_detail" data-tid="{{item.id}}">查看进度</view>
      </view>
    </view>

    <view class="look_more" wx:if="{{course_info.has_join <= 0}}">查看更多拼团</view>

    
    
  </view>
  <view class="margin_gray"></view>

  <view class='main_sel'>
    <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}'  data-current = "0" bindtap='checkCurrent'>课程介绍</view>
    <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}'  data-current = "1" bindtap='checkCurrent'>课程目录</view>
  </view>
  <view class="heng1"></view>

  <view wx:if="{{currentData == 0}}" class="course_intro">
    <rich-text nodes="{{course_info.content}}"></rich-text>
  </view>

  <view wx:if="{{currentData == 1}}" class="course_intro">
    <view wx:for="{{course_cata.lists}}" wx:key="index">

      <!-- 直播课 -->
      <view wx:if="{{item.cateid == 1}}">
        <view class="flex">
          <view wx:if="{{index < 9}}" class="course_order">0{{index + 1}}</view>
          <view wx:else class="course_order">0{{index + 1}}</view>
          <image class="record_img" src="../../images/live.png"></image>
          
          <view class="course_title">{{item.name}}</view>
          <view wx:if="{{course_info.pay_status == 2}}">
            <view wx:if="{{item.mt == 2}}" class="study_button" style="background:rgba(3,182,131,1);" data-xb="{{index}}" bindtap="to_video">
            <view class="study">看直播</view>
          </view>
          <view wx:elif="{{item.mt ==4}}" class="study_button" data-xb="{{index}}" bindtap="to_video">看回放</view>
          </view>
          
        </view>
        <view wx:if="{{course_info.pay_status == 2}}">
          <view wx:if="{{item.mt == 2}}" class="study_rate" >正在直播中</view>
          <view wx:elif="{{item.mt == 3}}" class="study_rate" style="color:#A4A4A4;">回放生成中...</view>
          <view wx:elif="{{item.mt == 4}}" class="study_rate" >回放已生成</view>
          <view wx:elif="{{item.mt == 1}}" class="study_rate" >未开课</view>
          <view wx:else="{{item.mt == 0}}" class="study_rate" >直播已删除</view>
          <image class="xu" src="../../images/xu.png" ></image>
          <view class="flex" bindtap="{{click_file?'':'to_course_file'}}"  data-xb="{{index}}" wx:if="{{item.annex_num > 0 }}">
            <image class="file-img1" src="../../images/file1.png"></image>
            <view class="file" style="color:rgba(32,32,32,1);">讲义资料</view>
            <view class="file_num">查看</view>
            <image class="next" src="../../images/next.png"></image>
          </view>
          <view class="flex" wx:if="{{item.eid > 0}}">
            <image class="file-img1" src="../../images/work1.png"></image>
            <view class="file" style="color:rgba(32,32,32,1);">课后作业</view>
            <view class="work_finish" wx:if="{{item.mark_status == 0 || item.mark_status == null}}" bindtap="to_homework" data-xb="{{index}}">待完成</view>
            <view class="work_finish" wx:elif="{{item.mark_status == 1}}" style="color:rgba(164,164,164,1);">批改中</view>
            <view class="work_finish" wx:else="{{item.mark_status == 2}}" style="color:rgba(77,151,246,1);" bindtap="to_homework_report" data-mid="{{item.mid}}">查看报告</view>
            <image class="next" src="../../images/next.png"></image>
          </view>
          <view class="heng3"></view>
        </view>


        <view class="flex" wx:if="{{course_info.pay_status <= 1}}">
          <image class="file_img" src="../../images/file.png"></image>
          <view class="file">讲义资料</view>
          <view class="shu"></view>
          <image class="work_img" src="../../images/work.png"></image>
          <view class="file">课后作业</view>
        </view>
        <view class="heng2" wx:if="{{course_info.pay_status <= 1}}"></view>
      </view>

      <view wx:if="{{item.cateid == 0}}">
        <view class="flex">
          <view wx:if="{{index < 9}}" class="course_order">0{{index + 1}}</view>
          <view wx:else class="course_order">0{{index + 1}}</view>
          <image class="record_img" src="../../images/record.png"></image>
          
          <view class="course_title">{{item.name}}</view>
          <view wx:if="{{course_info.pay_status == 2}}">
            <view wx:if="{{item.percent == 0}}" class="study_button" style="background:rgba(3,182,131,1);" data-xb="{{index}}" bindtap="to_video">
            <view class="study">去学习</view>
          </view>
          <view wx:elif="{{item.percent < 100 && item.percent > 0}}" class="study_button" data-xb="{{index}}" bindtap="to_video">继续学习</view>
          <view wx:else="{{item.percent == 100}}" class="study_button1" data-xb="{{index}}" bindtap="to_video">去复习</view>
          </view>
          
        </view>
        <view wx:if="{{course_info.pay_status == 2}}">
          <view wx:if="{{item.percent == 0}}" class="study_rate" >未学习</view>
          <view wx:elif="{{item.percent < 100 && item.percent > 0}}" class="study_rate" >已学习{{item.percent}}%</view>
          <view wx:else="{{item.percent == 100}}" class="study_rate" style="color:#A4A4A4;">已学习{{item.percent}}%</view>
          <image class="xu" src="../../images/xu.png" ></image>
          <view class="flex" bindtap="{{click_file?'':'to_course_file'}}" data-xb="{{index}}" wx:if="{{item.annex_num > 0 }}">
            <image class="file-img1" src="../../images/file1.png"></image>
            <view class="file" style="color:rgba(32,32,32,1);">讲义资料</view>
            <view class="file_num">查看</view>
            <image class="next" src="../../images/next.png"></image>
          </view>
          <view class="flex" wx:if="{{item.eid > 0}}">
            <image class="file-img1" src="../../images/work1.png"></image>
            <view class="file" style="color:rgba(32,32,32,1);">课后作业</view>
            <view class="work_finish" wx:if="{{item.mark_status == 0 || item.mark_status == null}}" bindtap="to_homework" data-xb="{{index}}">待完成</view>
            <view class="work_finish" wx:elif="{{item.mark_status == 1}}" style="color:rgba(164,164,164,1);">批改中</view>
            <view class="work_finish" wx:else="{{item.mark_status == 2}}" style="color:rgba(77,151,246,1);" bindtap="to_homework_report" data-mid="{{item.mid}}">查看报告</view>
            <image class="next" src="../../images/next.png"></image>
          </view>
          <view class="heng3"></view>
        </view>


        <view class="flex" wx:if="{{course_info.pay_status <= 1}}">
          <image class="file_img" src="../../images/file.png"></image>
          <view class="file">讲义资料</view>
          <view class="shu"></view>
          <image class="work_img" src="../../images/work.png"></image>
          <view class="file">课后作业</view>
        </view>
        <view class="heng2" wx:if="{{course_info.pay_status <= 1}}"></view>
      </view>
    </view>

    <view class="end_test">
      <view class="btn_end_test" wx:if="{{course_cata.mark_status == 0 && course_cata.buy > 0}}" bindtap="to_test">去考试</view>
      <view class="btn_end_test" wx:if="{{course_cata.mark_status == 1 && course_cata.buy > 0 }}"  style="background:rgba(204,204,204,1);">批改中</view>
      <view class="btn_end_test" wx:if="{{course_cata.mark_status == 2 && course_cata.buy > 0 }}" bindtap="to_test_report" style="background:rgba(77,151,246,1);">查看报告</view>
      <view class="end_title">结课考试</view>
      <view class="end_intro">巩固知识点，全面掌握考点学习方法。</view>
    </view>
    
  </view>



  
  <image class="group_btn_layout" src="../../images/group.png" wx:if="{{course_info.pay_status <= 1 || course_info.pay_status >= 5}}"></image>
  <view class="countDown" wx:if="{{course_info.pay_status <= 1 || course_info.pay_status >= 5}}">{{clock}}</view>
  <!-- <view class="countDown" style="margin-left: 619rpx;">{{min}}</view>
  <view class="countDown" style="margin-left: 683rpx;">{{sec}}</view> -->
  <view class="time_tip" wx:if="{{course_info.pay_status <= 1 || course_info.pay_status >= 5}}">距结束</view>
  <view class="btn_layout" wx:if="{{course_info.pay_status <= 1 || course_info.pay_status >= 5}}">
    
    <view>
      <view class="group_price1"><text style="font-size:30rpx;">¥</text>{{course_info.pt_price}}</view>
      <view class="old_price1">¥{{course_info.price}}</view>
    </view>
    
    <image class="group_label" src="../../images/group_label.png"></image>
    <view class="flex" style="margin-left:70rpx;" >
      <button class="login_read"  open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" wx:if="{{!login}}"></button>
      <button class="login_read" style="margin-left:187rpx;" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" wx:if="{{!login}}"></button>
    </view>
    
    <view class="single_buy" bindtap="{{login?'to_pay':''}}"><text class="buy_price" >单独购买</text><text class="buy_price" style="margin-top: 34rpx;margin-left: 67rpx;">¥{{course_info.price}}</text> </view>

    <view class="single_buy" bindtap="{{login?'to_groupPay':''}}" style="margin-left: 530rpx;border-radius:0rpx 38rpx 38rpx 0rpx;background:rgba(255,75,32,1);"><text class="buy_price">发起拼团</text><text class="buy_price" style="margin-top: 34rpx;margin-left: 67rpx;">¥{{course_info.pt_price}}</text> </view>
    
  </view>
  


