  opacity:1;
}
.join{
  margin-left: 240rpx;
  margin-top: 10rpx;
  width:186rpx;
  height:63rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:63rpx;
  text-align: center;
  color:rgba(255,255,255,1);
  background:linear-gradient(130deg,rgba(255,71,28,1) 0%,rgba(255,192,143,1) 100%);
  opacity:1;
  border-radius:32rpx;
}
