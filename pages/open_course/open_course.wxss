/* pages/open_course/open_course.wxss */
.tab-h1{ 
  margin-left: 15rpx;
  height: 80rpx;
  padding-right: 30rpx;
  box-sizing: border-box; 
  overflow: hidden; 
  line-height:90rpx;
  white-space: nowrap;  
  display: flex;
} 
.tab-item1{ 
  margin-left: 15rpx;
  height:50rpx;
  padding: 0rpx 25rpx;
  display: inline-block; 
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:50rpx;
  text-align: center;
  color:rgba(156,156,156,1);
  background:rgba(238,238,238,1);
  border-radius:10rpx;
} 
.tab-item1.active{ 
  position: relative; 
  margin-left: 15rpx;
  height:50rpx;
  padding: 0rpx 25rpx;
  display: inline-block; 
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:50rpx;
  text-align: center;
  color:rgba(255,255,255,1);
  background:#14CBA2;
  border-radius:10rpx;
} 
.course_layout{
  margin-left: 30rpx;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.fm{
  width: 690rpx;
  height: 399rpx;
}
.mask{
  position: absolute;
  display: flex;
  margin-top: 321rpx;
  width:690rpx;
  height:78rpx;
  background:rgba(0,0,0,1);
  opacity:0.49;
  border-radius:0rpx 0rpx 12rpx 12rpx;
}
.ava{
  margin-top: 18rpx;
  margin-left: 24rpx;
  width:42rpx;
  height:42rpx;
  border-radius: 50%;
}
.tea_name{
  margin-left: 13rpx;
  margin-top: 21rpx;
  /* width:78px; */
  height:37rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:37rpx;
  color:rgba(255,255,255,1);
  opacity:1;
}
.time{
  margin-left: 27rpx;
  margin-top: 21rpx;
  /* width:99px; */
  height:37rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:40rpx;
  color:rgba(255,255,255,1);
  opacity:1;
}
.title{
  width:690rpx;
  height:90rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:45rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color:rgba(39,39,39,1);
  opacity:1;
}
.flex{
  display: flex;
}
.free{
  margin-top: 15rpx;
  width:72rpx;
