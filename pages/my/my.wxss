/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
   padding: 61rpx 0 0;
}

.userinfo-avatar {
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  overflow:hidden;
}
.ava{
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #272727;
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:bold;
   margin-top: 31rpx;
   line-height:48rpx;
}



.list{
  background-color: #fff;
  margin-top: 20rpx;
}
.list .list-li{
   display: flex;
   line-height: 105rpx;
   align-items: center;
   padding-left: 45rpx;
   justify-content: flex-start;
}
.list .list-li .item-img{
  width: 39rpx;
  height: 39rpx;
  flex-grow:0;
}
.item{
  display: flex;
  margin-left:23rpx;
  justify-content: space-between;
  flex-grow:1;
  align-items: center;
   box-sizing: border-box;
   padding-right:34rpx; 
}
.item .right-img{
width: 14rpx;
height: 14rpx;
border-top: 3rpx solid #DEDEDE;
border-right: 3rpx solid #DEDEDE;
transform: rotate(45deg);
}
.item-text{
  font-size:26rpx;
  color: #272727;
}

.list-li:last-child .item{
  border-bottom:none;
}


